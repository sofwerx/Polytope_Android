<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Device Found"
            android:layout_margin="10dp"
            android:background="#1C1C1C"
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:fontFamily="sans-serif-thin"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1C1C1C"
                android:text="Device Type:"
                android:textColor="@android:color/white"
                android:textSize="28dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#1C1C1C"
                android:layout_weight="1"
                android:paddingLeft="15dp">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:src="@drawable/rp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#1C1C1C"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Device #:"
                android:fontFamily="sans-serif-thin"
                android:textColor="@android:color/white"
                android:textSize="28dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="400065002340050d"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-thin"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#1C1C1C"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Services:"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-thin"
                android:textSize="28dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Rad/Aud/Vid"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-thin"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#1C1C1C"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Compatible:"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-thin"
                android:textSize="28dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Yes"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-thin"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1C1C1C"
                    android:layout_alignParentBottom="true"
                    android:text="Would you like to add this device?"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:padding="5dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Yes"
            android:onClick="yes_click"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_margin="5dp"
            android:background="#1C1C1C"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="No"
            android:onClick="no_click"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_margin="5dp"
            android:background="#1C1C1C"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>